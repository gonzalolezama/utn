<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col offset-1">
            <h4>Agregar nueva novedad</h4>

            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>